view, input, form, swiper, swiper-item, picker, textarea, scroll-view {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

image {
  max-width: 100%;
}
::-webkit-scrollbar{
  display: none;
}
/* 表单类 */

input {
  color: #000;
}

textarea {
  color: #000;
  width: 100%;
}

.placeholder {
  color: #666;
}

/*表单placeholder默认样式*/

button {
  margin: 0;
  paading: 0;
  line-height: staic;
}

/* 如需清空button样式 */

button:after {
  border: none;
}

::-webkit-scrollbar{
