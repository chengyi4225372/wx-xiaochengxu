/* pages/liuyan/liuyan.wxss */
.container{
  padding: 0 30rpx 100rpx;
  overflow-y: scroll;
}
.liuyan_tab{
  margin-top: 15rpx;
}
.liuyan_tab .tab_li{
  padding: 30rpx 0;
  margin-right: 110rpx;
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
  position: relative;
}
.tab_li.active{
  font-size: 32rpx;
  color: #de2810;
}
.tab_li.active::after{
  display: block;
  content: '';
  width: 100%;
  height: 12rpx;
  background-image: linear-gradient(90deg,rgb(222,40,16),rgb(255,226,222));
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.liuyan_li .head{
  flex-shrink: 0;
  width: 66rpx;
  height: 66rpx;
  font-size: 0;
}
.liuyan_li .head image{
  width: 66rpx;
  height: 66rpx;
}
.liuyan_li .info{
  flex: 1;
  margin-left: 17rpx;
  margin-top: 10rpx;
  border-bottom: solid 1px #f2f2f2;
  padding-bottom: 30rpx;
}
.liuyan_li:last-child .info{
  border-bottom: none;
}
.liuyan_list{
  margin: 20rpx 0;
}
.liuyan_li{
  padding-top: 30rpx;
}
.liuyan_li .h1{
  font-size: 32rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #222;
}
.liuyan_li .txt{
  margin-top: 30rpx;
  font-size: 26rpx;
  line-height: 46rpx;
  color: #444;
}
.liuyan_li .bot{
  margin-top: 30rpx;
}
.liuyan_li .bot .date{
  font-size: 24rpx;
  color: #999;
}
.liuyan_li .bot .zan text{
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}
.liuyan_li .bot .zan .fabulous{
  width: 27rpx;
  height: 29rpx;
  font-size: 0;
}
.liuyan_li .bot .zan .fabulous image{
  width: 27rpx;
  height: 29rpx;
}
.liuyan_bot{
  position: fixed;
  width: 100%;
  height: 100rpx;
  box-shadow: 1px 1.5px 10rpx .5px rgba(0,0,0,0.35);
  padding: 18rpx 30rpx;
  left: 0;
  bottom: 0;
  z-index: 99;
  background-color: #fff;
}
.comment{
  flex: 1;
  background-color: #f4f5f7;
  border: solid 1px #f2f2f2;
  height: 64rpx;
  border-radius: 32rpx;
  padding: 0 30rpx;
}
.comment image{
  width: 33rpx;
  height: 30rpx;
  flex-shrink: 0;
}
.comment text{
  display: block;
  flex: 1;
  padding: 0 25rpx;
  font-size: 26rpx;
  color: #999;
} 
.comment_btn{
  width: 121rpx;
  height: 64rpx;
  margin-left: 18rpx;
}
.comment_btn button{
  width: 121rpx!important;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background-image: linear-gradient(-30deg,rgb(241,38,38),rgb(253,124,98));
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  padding: 0!important;
}
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 998;
}
.comment_mask{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  background-color: #fff;
  padding: 40rpx 30rpx;
}
.comment_mask .title{
  font-size: 26rpx;
  color: #666;
}
.comment_mask textarea{
  height: 100rpx;
  width: 100%;
  font-size: 30rpx;
  color: #333;
  margin: 30rpx 0 20rpx;
}
.release{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.release_btn{
  padding: 0!important;
  width: auto!important;
  font-size: 35rpx;
  color: #309ffa;
  font-weight: normal;
  margin-left: auto;
  background: none;
  margin-right: 0!important;
}