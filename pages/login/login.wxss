.header {
	display: flex;
	margin: 240rpx auto 40rpx;
	justify-content: center;
	align-items: center;
	border-bottom: 1px solid #ccc;
	width: 650rpx;
	height: 300rpx;
	flex-flow: column;
}
.header image.head-img {
	width: 180rpx;
	height: 180rpx;
	border-radius: 20rpx;
	/* background-color: #FD5B5B; */
}
.header .logo{
	text-align: center;
	margin-top: 25rpx;
}
.header .logo image{
	width: 260rpx;
	height: 88rpx;
}
.content {
	padding-left: 50rpx;
	margin-bottom: 90rpx;
	text-align: center;
}
.content text {
	display: block;
	color: #9d9d9d;
	margin-top: 40rpx;
}
.hide{
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
  display: none;
}
.show{
  display: block;
  /* background: #eef0ed !important; */
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
	/* color: #000300 !important; */
	background: #FD5B5B!important;
}
