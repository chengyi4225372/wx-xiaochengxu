.header {
	display: flex;
	margin: 40rpx auto;
	justify-content: center;
	align-items: center;
	border-bottom: 1px solid #ccc;
	width: 650rpx;
	height: 300rpx;
}
.header image {
	width: 200rpx;
	height: 200rpx;
}
.content {
	padding-left: 50rpx;
	margin-bottom: 90rpx;
}
.content text {
	display: block;
	color: #9d9d9d;
	margin-top: 40rpx;
}
.hide{
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
  display: none;
}
.show{
  display: block;
  /* background: #eef0ed !important; */
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
  /* color: #000300 !important; */
}
