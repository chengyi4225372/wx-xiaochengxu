<view wx:if="{{isHide}}">
<view wx:if="{{canIUse}}">
	<view class='header'>
		<image src='../../image/wx_icon.png'></image>
	</view>
	<view class='content'>
		<view>申请获取以下权限</view>
		<text>获得你的公开信息(昵称，头像,手机号等)</text>
	</view>
  <view>
  <button class="{{flag?'show':'hide'}}" type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">授权登录
	</button>
  <button class="{{flag?'hide':'show'}}" type="primary" lang="zh_CN" open-type='getPhoneNumber'  bindgetphonenumber="getPhoneNumber">绑定手机号</button>
  </view>
		
</view>
<view wx:else>请升级微信版本</view>
</view> 