/* pages/deed_diary/diary.wxss */
.preface_info{
  font-size: 26rpx;
  color: #222;
  line-height: 48rpx;
}
.assume_box1{
  margin-bottom: 12rpx;
}
.assume_list{
  margin-top: 50rpx;
}
.assume_li{
  margin-bottom: 45rpx;
}
.assume_li:last-child{
  margin-bottom: 0;
}
.assume_li .h1{
  font-size: 26rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: #de2810;
  padding-left: 50rpx;
  position: relative;
}
.more_btn{
  position: absolute;
  right: 20rpx;
  bottom: 5rpx;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 35rpx;
}
.assume_li .h1::before{
  display: block;
  content: '';
  width: 25rpx;
  height: 25rpx;
  background-color: #de2810;
  margin-right: 20rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
}
.assume_li_con{
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 22rpx;
  padding: 30rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #222;
}
.more{
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  background-color: #fffaf2;
  font-size: 32rpx;
  font-weight: bold;
  color: #ef4a1a;
  margin-top: 40rpx;
}