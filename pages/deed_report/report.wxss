/* pages/deed_report/report.wxss */
.report_box .title2{
  margin-bottom: 50rpx;
}
.report_swiper{
  /* margin-top: 75rpx; */
  position: relative;
  height: 100%;
}
.report_swiper swiper{
  height: 1025rpx;
  position: relative;
  height: 100%;
}
.report_img{
  padding: 0 56rpx;
  font-size: 0;
  margin-top: 75rpx;
}
.imgSwiper{
  position: relative;
  padding: 0 45rpx;
}
.imgSwiper swiper{
  width: 100%;
  height: 324rpx;
}
.imgSwiper image{
  width: 100%;
  height: 100%;
}
.report_img image{
  width: 100%;
  height: 324rpx;
}
.report_info{
  margin-top: 60rpx;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #222;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.report_swiper .wx-swiper-dot{
  width: 14rpx;
  height: 14rpx;
}
.report_swiper .wx-swiper-dot-active{
  width: 26rpx;
  border-radius: 7rpx;
}
.swiper-button{
  width: 50rpx;
  height: 46rpx;
  font-size: 0;
  position: absolute;
  top: 54%;
  z-index: 111;
  text-align: center;
}
.swiper-button.disable{
  -webkit-filter: grayscale(1);
  opacity: .5;
}
.swiper-button image{
  width: 25rpx;
  height: 46rpx;
}
.swiper-prev{
  left: -10rpx;
}
.swiper-next{
  right: -10rpx;
}

.brief_txt1 .p {
  height: 245rpx;
  overflow-y: scroll;
}
.report_slide{
  height: 95%;
  overflow-y: scroll;
}
.report_slide::-webkit-scrollbar{
  display: none;
}
.report_swiper .wx-swiper-dots{
  bottom: 0;
}
.report_box{
  height: 100%;
}