/* pages/explore/explore.wxss */
.brief_txt1{
  font-size: 24rpx;
  line-height: 42rpx;
  color: #222;
}
.brief_txt1 .p{
  margin: 20rpx 0 13rpx;
}
.mark2{
  margin-left: auto;
  width: 36rpx;
}
.strategy_list{
  margin-top: 50rpx;
}
.strategy_li{
  height: 120rpx;
  border-radius: 22rpx;
  margin-bottom: 27rpx;
  position: relative;
  z-index: 1;
  padding: 0 40rpx;
  overflow: hidden;
}
.strategy_li:last-child{
  margin-bottom: 0;
}
.strategy_li .strategy_bg{
  position: absolute;
  width: 269rpx;
  height: 141rpx;
  right: -40rpx;
  top: -50rpx;
  z-index: -1;
}
.strategy_li .strategy_bg image{
  width: 100%;
  height: 100%;
}
.strategy_li navigator{
  width: 100%;
  height: 100%;
}
.strategy_li .p{
  font-size: 26rpx;
  color: #fff;
  font-weight: bold;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.strategy_li .num{
  width: 53rpx;
  height: 70rpx;
  margin-right: 25rpx;
  font-size: 0;
}
.strategy_li .num image{
  width: 53rpx;
  height: 70rpx;
} 

.strategy_li:last-child{
  margin-bottom: 0;
}

.strategy_li:nth-child(3n-2){
  background-image: linear-gradient(90deg,rgb(71,160,255),rgb(21,107,255))
}
.strategy_li:nth-child(3n-1){
  background-image: linear-gradient(90deg,rgb(255,191,0),rgb(255,152,0));
}
.strategy_li:nth-child(3n){
  background-image: linear-gradient(90deg,rgb(9,218,219),rgb(6,186,194));
}