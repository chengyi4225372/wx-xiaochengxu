/* pages/honor_individual/individual.wxss */
.report_swiper{
  position: relative;
}
.report_swiper swiper{
  height: 610rpx;
  position: relative;
  padding: 0 56rpx;
}
.report_img{
  /* padding: 0 56rpx; */
  font-size: 0;
}
.report_img image{
  width: 100%;
  height: 324rpx;
}
.report_info{
  margin-top: 50rpx;
}
.report_swiper .wx-swiper-dot{
  width: 14rpx;
  height: 14rpx;
}
.report_swiper .wx-swiper-dot-active{
  width: 26rpx;
  border-radius: 7rpx;
}
.swiper-button{
  width: 50rpx;
  height: 46rpx;
  font-size: 0;
  position: absolute;
  top: 140rpx;
  z-index: 111;
  text-align: center;
}
.swiper-button.disable{
  -webkit-filter: grayscale(1);
  opacity: .5;
}
.swiper-button image{
  width: 25rpx;
  height: 46rpx;
}
.swiper-prev{
  left: -20rpx;
}
.swiper-next{
  right: -20rpx;
}
.report_info_h2{
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
}
.report_info .h3{
  font-size: 26rpx;
  line-height: 56rpx;
  color: #666666;
  margin-top: 10rpx;
}
.report_info .txt{
  margin-top: 60rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #222;
}
.report_box ,.report_swiper,.report_swiper swiper {
  height: 100%;
}