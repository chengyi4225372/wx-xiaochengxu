/* pages/epilogue/epilogue.wxss */
.container{
  height: calc(100% - 100rpx);
}
.preface_box{
  padding: 100rpx 35rpx 40rpx;
  height: 100%;
}
.title{
  text-align: center;
}
.title .h1{
  vertical-align: middle;
  font-size: 0;
}
.title .h1 image{
  width: 228rpx;
  height: 96rpx;
}
.title .h1::before,
.title .h1::after{
  display: inline-block;
  content: '';
  width: 110rpx;
  height: 3px;
  margin: 0 50rpx;
  font-size: 0;
}
.title .h1::before{
  background-image: linear-gradient(90deg,rgb(255,208,167),rgb(234,87,44));
}
.title .h1::after{
  background-image: linear-gradient(270deg,rgb(255,208,167),rgb(234,87,44));
}
.preface_con{
  width: 100%;
  height: calc(100% - 150rpx);
  padding: 40rpx 25rpx;
  border-radius: 22rpx;
  background-image: linear-gradient(rgb(255,83,55),rgb(255,140,56),rgb(255,196,56));
  margin-top: 50rpx;
}
.preface_con_box{
  height: 100%;
  background-image: linear-gradient(rgb(255,247,235),rgb(255,255,255));
  border-radius: 22rpx;
  overflow-y: scroll;
  padding: 50rpx 40rpx;
}
.red_btn navigator{
  width: 100%;
  height: 100%;
}
.red_btn{
  width: 260rpx;
  height: 78rpx;
  background-image: linear-gradient(90deg,rgb(255,96,96),rgb(248,59,59));
  font-size: 32rpx;
  margin: 50rpx auto 0;
}